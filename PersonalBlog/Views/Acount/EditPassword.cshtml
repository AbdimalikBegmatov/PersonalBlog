@{
    ViewData["Title"] = ViewBag.Title;
}

@model ChangePasswordViewModel

<h2 class="h2 text-center border-bottom">@ViewBag.Title для @Model.Email</h2>
<div class="text-center mb-3">
    <a class="link-primary text-decoration-none" asp-controller="Home" asp-action="Index">Главная</a> /
    <a class="link-primary text-decoration-none" asp-action="Index">Все пользователи</a>
</div>
<form method="post" asp-controller="Acount" asp-action="EditPassword">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    @* <div class="row justify-content-center m-1">
        <div class="col-6">
            <div class="row"> *@
                @* <label class="col-3 form-label">Id</label> *@@* 
                <div class="col-7"> *@
                    <input type="hidden" class="form-control" asp-for="Id" readonly />
                    <input type="hidden" class="form-control" asp-for="Email" readonly />
                @* </div>
            </div>
        </div>
    </div> *@
    <div class="row justify-content-center m-1">
        <div class="col-6">
            <div class="row">
                <label class="col-3 form-label">Старый пароль</label>
                <div class="col-7">
                    <input class="form-control" asp-for="OldPassword" />
                    <span class="text-danger" asp-validation-for="OldPassword"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center m-1">
        <div class="col-6">
            <div class="row">
                <label class="col-3 form-label">Новый пароль</label>
                <div class="col-7">
                    <input class="form-control" asp-for="NewPassword" />
                    <span class="text-danger" asp-validation-for="NewPassword"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center m-1">
        <div class="col-6">
            <div class="row">
                <label class="col-3 form-label">Подвердите новый пароль</label>
                <div class="col-7">
                    <input class="form-control" asp-for="ConfirmPassword" />
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row justify-content-center m-1">
        <div class="col-6">
            <div class="row justify-content-center">
                <button type="submit" class="col-2 btn btn-primary btn-sm me-1">Сохранить</button>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
